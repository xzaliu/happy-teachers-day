    <main>
        <p>Thank you for inspiring us to innovate, create, and think like programmers!</p>
        <section id="messages">
            <h3>Leave a message for your teacher:</h3>
            <textarea id="messageInput" placeholder="Type your message here..."></textarea>
            <button onclick="submitMessage()">Submit</button>
            <ul id="messageList"></ul>
        </section>
    </main>
    <footer>
        <p>&copy; 2025 - Students of IT</p>
    </footer>
    <script src="script.js"></script>
